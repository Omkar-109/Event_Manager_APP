<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_back"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/item_vendor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:text="Name: Catering Co."
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_vendor_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:text="Service: Catering"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/item_vendor_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone: 987-654-3210"
        android:textColor="@color/black"
        android:textSize="14sp" />

</LinearLayout>
